{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Directory Processor",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "args": [
                "--agent",
                "directory_processor",
                "--api_key",
                "YOUR_API_KEY",
                "--mock_api",
                "--args",
                "job.json",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Image Processor",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "args": [
                "--agent",
                "image_processor",
                "--api_key",
                "YOUR_API_KEY",
                "--mock_api",
                "--args",
                "job_img.json",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}